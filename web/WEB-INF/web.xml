<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <filter>
        <filter-name>AutoLoginFilter</filter-name>
        <filter-class>com.czxy.user.web.filter.AutoLoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AutoLoginFilter</filter-name>
        <url-pattern>/index.jsp</url-pattern>
        <url-pattern>/msg.jsp</url-pattern>
        <url-pattern>/order_info.jsp</url-pattern>
        <url-pattern>/order_list.jsp</url-pattern>
        <url-pattern>/product_info.jsp</url-pattern>
        <url-pattern>/product_list.jsp</url-pattern>
        <url-pattern>/cart.jsp</url-pattern>
    </filter-mapping>
    <listener>
        <listener-class>com.czxy.product.web.listener.MyServletContextListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>ProductServlet</servlet-name>
        <servlet-class>com.czxy.product.web.servlet.ProductServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>com.czxy.user.web.servlet.UserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VerifyCodeServlet</servlet-name>
        <servlet-class>com.czxy.verifycode.web.servlet.VerifyCodeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VerifyCodeServlet</servlet-name>
        <url-pattern>/vc</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductServlet</servlet-name>
        <url-pattern>/product</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>OrdersServlet</servlet-name>
        <servlet-class>com.czxy.orders.web.servlet.OrdersServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OrdersServlet</servlet-name>
        <url-pattern>/orders</url-pattern>
    </servlet-mapping>
</web-app>